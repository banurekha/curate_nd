<% content_for :main do %>

  <% if content_for?(:page_header) %>
    <div class="row">
      <div class="span12">
        <%= yield(:page_header) %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <%= yield %>
    <div class="<%= content_for?(:left_column_width) ? "span#{yield(:left_column_width)}" : "span6" %>">
      <%= content_for?(:left_column) ? yield(:left_column) : yield %>
    </div>

    <div class="<%= content_for?(:right_column_width) ? "span#{yield(:right_column_width)}" : "span6" %>">
      <%= content_for?(:right_column) ? yield(:right_column) : yield %>
    </div>
  </div>

<% end %>

<%= render :template => 'layouts/curate_nd' %>
