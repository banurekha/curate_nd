<!-- scholarsphere over ride -->
<!-- the sub on ':' is b.c. jQuery has trouble with '.' or ':'
on element ids -->
<% if document.has_key?(:noid_s) %>
<% noid = document[:noid_s].first %>
<tr id="document_<%= noid.gsub(":", "_") %>" class="<%= cycle("","zebra") %>">
  <% gf = ActiveFedora::Base.find(document.id, cast: true) %>
  <td width="44%">
    <a href="" title="Click for more details"><i id="expand_<%= noid.gsub(":", "_") %>" class="icon-plus icon-large fleft show-details"></i></a>&nbsp;
    <%= render :partial => 'dashboard/_index_partials/thumbnail_display', :locals => {:document=>document} %>
    <span class=center><%= link_to render_document_show_field_value(:document=>document, :field=>document.title_or_label), polymorphic_path([:curation_concern, gf]), :id => "src_copy_link#{noid}" %> <br /></span>
  </td>
  <td width="17%"><%= document.fetch(:desc_metadata__date_uploaded_dt,'').to_time.strftime("%m/%d/%Y") unless document.fetch(:desc_metadata__date_uploaded_dt,'').blank? %> </td>
  <td width="5%" align="center">
    <% if !document[:read_access_group_t].blank? and document[:read_access_group_t].include?('registered') %>
      <a href="<%= polymorphic_path([:curation_concern, gf]) %>/edit/?tab=permissions" id="permission_<%= noid %>"><span class="label label-info" title="<%=t('sufia.institution_name') %>"><%=t('sufia.institution_name') %></span></a>
    <% elsif !document[:read_access_group_t].blank? and document[:read_access_group_t].include?('public') %>
      <a href="<%= polymorphic_path([:curation_concern, gf]) %>/edit/?tab=permissions" id="permission_<%= noid %>"><span class="label label-success" title="Open Access">Open Access</span></a>
    <% else %>
      <a href="<%= polymorphic_path([:curation_concern, gf]) %>/edit/?tab=permissions" id="permission_<%= noid %>"><span class="label label-important" title="Private">Private</span></a>
    <% end %>
  </td>
  <td width="23%" class="center">
    <span style="position: relative; display: inline-block">
     <%= link_to raw('<!--i class="icon-unlock under"></i--><i class="icon-link icon-large over"></i>'), '#', :class => 'copypaste itemicon itemcode', :title => 'Single Use Link to File', :id => "copy_link_#{noid}" %>
    </span>&nbsp;&nbsp;&nbsp;
    <%= link_to raw('<i class="icon-pencil icon-large"></i>'), edit_polymorphic_path([:curation_concern, gf]), :class=> 'itemicon itemedit', :title => 'Edit File'  %>&nbsp;&nbsp;&nbsp;
    <%= link_to raw('<i class="icon-trash icon-large"></i>'), polymorphic_path([:curation_concern, gf]), :class=> 'itemicon itemtrash', :title => 'Delete File', :method => :delete, :data => { :confirm => "Deleting a file from #{t('sufia.product_name')} is permanent. Click OK to delete this file from #{t('sufia.product_name')}, or Cancel to cancel this operation"} %>&nbsp;&nbsp;&nbsp;
    <%= link_to raw('<i class="icon-plus icon-large"></i>'), related_file_dashboard_index_path(gf.id), :class=> 'itemicon iconplus', :title => 'Show related File'%>&nbsp;&nbsp;&nbsp;
    <%= display_trophy_link(@user, noid) %>&nbsp;&nbsp;&nbsp;
  </td>
</tr>
<tr class="hide" id="detail_<%= noid.gsub(":", "_") %>"> <!--  document detail"> -->
  <td colspan="6">
    <dl class="expanded-details">
      <% index_fields.each do |solr_fname, field| -%>
        <% if should_render_index_field? document, field %>
          <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_index_field_label :field => solr_fname %></dt>
          <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_index_field_value :document=>document, :field => solr_fname %></dd>
        <% end -%>
      <% end -%>

    </dl>
  </td>
</tr>
<% end %>
