<% content_for :local_js do %>
// initialize popover helpers
$("a[rel=popover]").popover();
<% end %>

<h1>Edit Profile</h1>
<div class="span45 well">
  <%= form_for @user, :url => user_path(current_user.id), :html => {:multipart => true, :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :username, '<i class="icon-twitter"></i> User Name'.html_safe, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :username, :class =>"input-medium" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button '<i class="icon-save"></i> Save Profile'.html_safe, :type => 'submit', :class => "btn-primary btn-large" %>
    </div>
  <% end %>
</div><!-- /span /well-->


