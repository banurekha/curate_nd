<%= simple_form_for [:curation_concern, senior_thesis] do |f| %>

  <%= f.label :title %>
  <%= f.input_field :title %>
  <%= f.label :description %>
  <%= f.input_field :description, as: :text %>
  <% if senior_thesis.persisted? && senior_thesis.current_thesis_file %>
    <dl>
      <dt>Current thesis file:</dt>
      <dd><%= senior_thesis.current_thesis_file %></dd>
    </dl>
    <%= f.label :thesis_file, 'Replace Thesis File' %>
    <%= f.input_field :thesis_file, as: :file %>
  <% else %>
    <%= f.label :thesis_file %>
    <%= f.input_field :thesis_file, as: :file %>
    <%= f.label "thesis_file" %>
    <%= f.input_field :thesis_file, as: :file %>
    <%= render :partial => "permission", :locals => { :gf => @generic_file, :f=> f , :curation_concern=> senior_thesis} %>
  <% end %>
  <%= f.submit %>

<% end %>